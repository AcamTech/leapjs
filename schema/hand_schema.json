{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "required":   ["pointables", "id", "stabilizedPalmPosition", "tools", "palmPosition", "fingers", "direction", "palmDirection"],
    "properties": {
        "id":      {
            "type": "number"
        },
        "fingers": {
            "type":  "array",
            "items": {
                "allOf": [
                    {
                        "$ref": "#/definitions/pointable_base"
                    },
                    {
                        "properties": {
                            "tool": {
                                "type":    "boolean",
                                "default": false,
                                "enum":    [false]
                            }
                        }
                    }
                ]
            }
        },

        "pointables":             {
            "type":  "array",
            "items": {
                "allOf": [
                    {
                        "$ref": "#/definitions/pointable_base"
                    },
                    {
                        "properties": {
                            "tool": {
                                "type":    "boolean",
                                "default": true
                            }
                        }
                    }
                ]
            }
        },
        "tools":                  {
            "type":  "array",
            "items": {
                "allOf": [
                    {
                        "$ref": "#/definitions/pointable_base"
                    },
                    {
                        "properties": {
                            "tool": {
                                "type":    "boolean",
                                "default": false,
                                "enum":    [true]
                            }
                        }
                    }
                ]
            }
        },
        "palmPosition":           {
            "$ref": "#/definitions/point"
        },
        "stabilizedPalmPosition": {
            "$ref": "#/definitions/point"
        },
        "direction":              {
            "$ref": "#/definitions/angle"
        },
        "palmDirection":          {
            "$ref": "#/definitions/angle"
        },
        "palmNormal":             {
            "$ref": "#/definitions/point"
        },
        "sphereRadius":           {
            "type":     "number",
            "minimum": 0
        }
    },

    "definitions": {
        "pointable_base": {
            "required":   ["id", "handId", "length", "tool", "direction", "stabilizedTipPosition", "tipPosition"],
            "type":       "object",
            "properties": {
                "id":                    {
                    "type": "number"
                },
                "handId":                {
                    "type": "number"
                },
                "length":                {
                    "type":    "number",
                    "default": 45
                },
                "direction":             {
                    "$ref": "#/definitions/angle"
                },
                "stabilizedTipPosition": {
                    "$ref": "#/definitions/point"
                },
                "tipPosition":           {
                    "$ref": "#/definitions/point"
                },
                "tipVelocity":           {
                    "$ref":    "#/definitions/point",
                    "default": 0
                }
            }
        },
        "point":          {
            "type":     "array",
            "minItems": 3,
            "maxItems": 3,
            "items":    [
                {
                    "type":    "number",
                    "default": 0
                },
                {
                    "type":    "number",
                    "default": 0
                },
                {
                    "type":    "number",
                    "default": 0
                }
            ]
        },
        "angle":          {
            "type":     "array",
            "minItems": 3,
            "maxItems": 3,
            "items":    [
                {
                    "type":    "number",
                    "default": 0,
                    "minimum": -1,
                    "maximum": 1
                },
                {
                    "type":    "number",
                    "default": 0,
                    "minimum": -1,
                    "maximum": 1
                },
                {
                    "type":    "number",
                    "default": 1,
                    "minimum": -1,
                    "maximum": 1
                }
            ]
        }
    }
}